<%- include('header') %> 
    <div id="heading" class="box">
      <h1><%= listTitle%></h1>
    </div>
    <div class="box">
      
  
  <% newListItems.forEach(function(item) { %> 

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" onchange="submit()" name="checkbox" value="<%= item._id %> "/>
        <p><%= item.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %> ">
    </form>
       
     <% }); %>  

      <form class="item" action="/" method="post">
        <input type="text" placeholder="New item" name="newItem" autocomplete="off"/>
        <button type="submit" name="list" value=<%= listTitle %>> + </button>
      </form>
    </div>

<%- include('footer') %> 
  
